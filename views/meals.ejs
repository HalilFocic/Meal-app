<%- include('partials/header') %>
<div id="showMeals">
<% for(var i=0;i<meals.length;i++){ %>
    <% if(i%4==0){ %>
        <div class="row">
    <% } %>
    <div class="col-sm-3 kolona">
    <div class="card kartice" style="width: 18rem;">
        <img src="<%= meals[i].image %>" class="card-img-top" alt="..." height="250px">
        <div class="card-body">
          <h5 class="card-title"><%= meals[i].name %></h5>
          <p class="card-text"><%=meals[i].desc %></p>
          <form  id="deleteForm" method="POST" action="/meals/<%=meals[i]._id%>?_method=DELETE">
            <button class="btn btn-danger btn-sm">
              Delete
            </button>
          </form>
        </div>
      </div>
    </div>
    <% if(i%4==3){ %>
    </div>
    <% } %>
<% } %>
</div>
</div>
<%- include('partials/footer') %>
